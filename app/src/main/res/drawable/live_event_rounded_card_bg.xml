<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border_thickness" android:color="?coreColorBorder" />
            <solid android:color="?coreColorPressedOverlay" />
            <corners android:radius="@dimen/image_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border_thickness" android:color="?coreColorBorder" />
            <solid android:color="?coreColorAppBackground" />
            <corners android:radius="@dimen/image_corner_radius" />
        </shape>
    </item>
</selector>