<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/clear" />
            <size android:height="@dimen/av_thumb_control_size" android:width="@dimen/av_thumb_control_size" />
        </shape>
    </item>
    <item android:left="@dimen/av_thumb_control_padding" android:top="@dimen/av_thumb_control_padding" android:right="@dimen/av_thumb_control_padding" android:bottom="@dimen/av_thumb_control_padding">
        <shape android:shape="oval">
            <solid android:color="@color/lighter_gray" />
        </shape>
    </item>
    <item android:left="@dimen/av_thumb_control_inner_padding" android:top="@dimen/av_thumb_control_inner_padding" android:right="@dimen/av_thumb_control_inner_padding" android:bottom="@dimen/av_thumb_control_inner_padding">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>