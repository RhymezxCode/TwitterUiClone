<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_opacity_10" />
            <padding android:left="@dimen/border_thickness" android:top="@dimen/border_thickness" android:right="@dimen/border_thickness" android:bottom="@dimen/border_thickness" />
            <corners android:radius="@dimen/card_corner_radius" android:topLeftRadius="@dimen/card_corner_no_radius" android:topRightRadius="@dimen/card_corner_no_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/border_thickness" android:color="?coreColorBorder" />
            <solid android:color="@color/clear" />
            <padding android:left="@dimen/border_thickness" android:top="@dimen/border_thickness" android:right="@dimen/border_thickness" android:bottom="@dimen/border_thickness" />
            <corners android:radius="@dimen/card_corner_radius" android:topLeftRadius="@dimen/card_corner_no_radius" android:topRightRadius="@dimen/card_corner_no_radius" />
        </shape>
    </item>
</selector>